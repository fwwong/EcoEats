                                <p class="card-text">Yes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>








    <script>
        $(document).ready(function () {
            let list = [];
            $('.add-icon').on('click', function () {
                var index = $(this).data('index');
                list.push(String(index));
                console.log(list);
                $('#addIndex').val(list.join(','));
                $('#addForm').submit();
            });
        });
    </script>