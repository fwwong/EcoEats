<!-- Profile information -->
<!-- header -->
<%-include ('../partials/header')%>

<div class="container-fluid">
  <div class="container text-center align-item-center pt-5" id="decor_user">
    <div class="pb-4 pt-5">
      <form action="upload.png" method="post" enctype="multipart/form-data">
        <label for="fileToUpload">
          <div class="editUserImage" style="background-image: url('../images/cats/cat_placeholder.png')">

            <span>Edit Profile Picture</span>
            <div style="position: relative">
              <img src="../images/icons/edit.png" class="editicon" alt="">
            </div>
          </div>
        </label>
        <input type="File" name="fileToUpload" id="fileToUpload">
      </form>
    </div>
  </div>


  <!-- Menu -->
  <div class="container px-3">

    <!-- Account Settings -->
    <div class="card p-3 bg-secondary btn">
      <a href="/profile/account-settings">
        <div class="row ">
          <div class="col-2">
            <img src="../images/icons/Setting.png" width="20px" height="20px" alt="" />
          </div>
          <div class="col" id="menubtn">Account Settings</div>
        </div>
      </a>
    </div>
    <br />

    <!-- Saved Recipes -->
    <div class="card p-3 bg-secondary btn">
      <a href="/saved-recipes">
        <div class="row">
          <div class="col-2">
            <img src="" width="20px" height="20px" alt="" />
          </div>
          <div class="col" id="menubtn">Saved Recipes</div>
        </div>
      </a>
    </div>
    <br />

    <!-- About Us -->
    <div class="card p-3 bg-secondary btn">
      <a href="/about-us">
        <div class="row">
          <div class="col-2">
            <img src="../images/icons/AboutUs.png" width="20px" height="20px" alt="" />
          </div>
          <div class="col" id="menubtn">About Us</div>
        </div>
      </a>
    </div>
    <br />

    <!-- Logout -->
    <div class="text-center ">
      <button type="button" class="btn" onclick="window.location.href='/logout'">
        LOGOUT
      </button>
    </div>
    <br />
  </div>
</div>

</div>
<!-- navbar and footer -->
<%-include ("../partials/bottom-nav")%>
<%-include ("../partials/footer") %>